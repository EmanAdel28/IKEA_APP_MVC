@using IKEA.BLL.DTO_s
@model IEnumerable<EmployeeDto>
@{
    ViewData["Title"] = "GetAllEmployees";
}

<br />
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary text-center">Create Employee</a>
<br />

@if (Model.Any())
{
    <table class="table table-striped table-hover mt-4">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(E => E.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>@Html.DisplayNameFor(D => D.EmployeeType)</th>
                <th>@Html.DisplayNameFor(D => D.Age)</th>
                <th>@Html.DisplayNameFor(D => D.Salary)</th>
                <th>@Html.DisplayNameFor(D => D.IsActive)</th>
                <th>@Html.DisplayNameFor(D => D.Gender)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var emp in Model)
            {
                <!-- Modal with a unique ID for each department -->
                <div class="modal fade" id="DeleteEmployee_@emp.Id" tabindex="-1" role="dialog" aria-labelledby="DeleteModalLabel_@emp.Id" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="DeleteModalLabel_@emp.Id">Delete Employee</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete <strong>@emp.Name</strong> department?
                            </div>
                            <div class="modal-footer">
                                <form asp-action="Delete" asp-route-DeptId="@emp.Id" method="post">

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <tr>
                    <td>@Html.DisplayFor(e => emp.Name)</td>
                    <td>@Html.DisplayFor(e => emp.Email)</td>
                    <td>@Html.DisplayFor(e => emp.EmployeeType)</td>
                    <td>@Html.DisplayFor(e => emp.Age)</td>
                    <td>@Html.DisplayFor(e => emp.Salary)</td>
                    <td>@Html.DisplayFor(e => emp.IsActive)</td>
                    <td>@Html.DisplayFor(e => emp.Gender)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@emp.Id" class="btn btn-warning">Details</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-success">Update</a>
                    </td>
                   
                    <td>
                        <a asp-action="Delete" asp-route-EmpId="@emp.Id" class="btn btn-danger"> Delete</a>
                    </td>
                        @* <!-- Button to trigger modal (must match modal ID) --> *@
                        @* <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#DeleteDepartment_@dept.Id"> *@
                        @*     Delete *@
                        @* </button> *@
                    
                </tr>
            }
        </tbody>
    </table>


}
else
{
    <div class="alert alert-info mt-3">
        <h3>No Employee Available</h3>
    </div>
}
