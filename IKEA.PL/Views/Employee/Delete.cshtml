@using IKEA.DAL.Models.Common
@model EmployeeDetailsDto
@{
    ViewData["Title"] = "Delete";
}

<h1>Are You Sure To Delete @Model.Name Employee?</h1>
<partial name="Partial/DeleteDetailsPartial" model="Model" />
<form asp-action="Delete" asp-route-empId="@Model.Id" method="post">
    <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
    <div class="mt-4">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back To list</a>

    </div>
</form>