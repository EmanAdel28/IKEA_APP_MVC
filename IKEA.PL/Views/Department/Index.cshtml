@using IKEA.BLL.DTO_s
@model IEnumerable<DepartmentDto>
@{
    ViewData["Title"] = "GetAllDepartments";
}

<br/>
<br/>
<a asp-controller="Department" asp-action="Create" class="btn btn-primary text-center ">Create Department</a>
<br/>
@if (Model.Count() > 0)
{
    <table class=" table table-striped table-hover mt-4">
        <thead class=" text-center">
            <tr>
                <th>@Html.DisplayNameFor(D => D.Code) </th>
                <th>@Html.DisplayNameFor(D => D.Name) </th>
                <th>@Html.DisplayNameFor(D => D.CreationDate) </th>
                <th> Details</th>
                <th> Update</th>
                <th> Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dept in Model)
            {
                <tr>
                    <td> @dept.Code</td>
                    <td> @dept.Name</td>
                    <td> @dept.CreationDate</td>
                    <td>
                        <a asp-Controller="Department" asp-action="Details" asp-route-id="@dept.Id"> Details</a>
                    </td>
                    <td>
                        <a asp-Controller="Department" asp-action="Edit" asp-route-id="@dept.Id"> Update</a>
                    </td>

                    <td>
                        <a asp-Controller="Department" asp-action="Delete" asp-route-id="@dept.Id"> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="alert alert-info mt-3">
        <h3> there is No Departments</h3>
    </div>
}
