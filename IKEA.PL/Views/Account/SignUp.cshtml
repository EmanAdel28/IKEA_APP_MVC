@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form action="SignUp" method="post">
			<input class="text email" type="text" asp-for="Fname" placeholder="Fname" required="">
			<input class="text email" type="text" asp-for="Lname" placeholder="Lname" required="">
			<input class="text email" type="text" asp-for="UserName" placeholder="Username" required="">
			<input class="text email" type="email" asp-for="Email" placeholder="Email" required="">
			<input class="text email" type="text" asp-for="Password" placeholder="Password" required="">
			<input class="text email" type="text" asp-for="ConfirmPassword" placeholder="ConfirmPassword" required="">

			<div class="wthree-text">
				<label class="anim">
					<input asp-for ="IsAgree" type="checkbox" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<div asp-validation-summary="All"></div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Don't have an Account? <a href="/Account/Login"> Login Now!</a></p>
	</div>
</div>
